<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/breakfastDescription"
        android:layout_width="171dp"
        android:layout_height="85dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:text="Delicioso arroz con camarones Jumbo en la salsa de la casa acompaÃ±ado de vegetales y ensalada"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/imageBreakfast"
        app:layout_constraintTop_toBottomOf="@+id/breakfastTittle" />

    <TextView
        android:id="@+id/breakfastTittle"
        android:layout_width="222dp"
        android:layout_height="47dp"
        android:layout_above="@+id/breakfastDescription"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Arroz con camarones"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageBreakfast"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/breakfastPrice"
        android:layout_width="180dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="116dp"
        android:text="Precio: 5000 i.v.i"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/breakfastDescription"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageBreakfast"
        android:layout_width="114dp"
        android:layout_height="162dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="9dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/breakfastTittle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="51dp"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="11dp"
        android:text="+"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/breakfastDescription"
        app:layout_constraintTop_toBottomOf="@+id/breakfastTittle" />


</androidx.constraintlayout.widget.ConstraintLayout>