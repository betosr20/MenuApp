<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:layout_marginBottom="4dp"
        android:background="?attr/colorButtonNormal">

        <TextView
            android:id="@+id/breakfastDescription"
            android:layout_width="222dp"
            android:layout_height="68dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="55dp"
            android:text="Arroz con camarones Jumbo en deliciosa salsa de la casa"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/breakfastTittle"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_above="@+id/breakfastDescription"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="54dp"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:text="Arroz con camarones"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/breakfastPrice"
            android:layout_width="180dp"
            android:layout_height="29dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="127dp"
            android:layout_marginEnd="104dp"
            android:layout_marginBottom="24dp"
            android:text="Precio: 5000 i.v.i"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageBreakfast"
            android:layout_width="119dp"
            android:layout_height="113dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="289dp"
            android:layout_marginBottom="53dp"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="63dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="72dp"
            android:layout_marginBottom="5dp"
            android:text="+"
            android:textSize="30sp" />

    </RelativeLayout>
</RelativeLayout>